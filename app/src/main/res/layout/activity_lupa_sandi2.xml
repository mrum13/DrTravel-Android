<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LupaSandiActivity2">

    <View
        android:id="@+id/bola1"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-16dp"
        android:background="@drawable/bola_background"/>

    <View
        android:id="@+id/bola2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="74dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/bola_background" />

    <View
        android:id="@+id/bola3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/bola_background" />

    <View
        android:id="@+id/bola4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:background="@drawable/bola_background"/>

    <View
        android:id="@+id/bola5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/bola_background"/>

    <TextView
        android:id="@+id/lupa_sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:layout_centerHorizontal="true"
        android:text="Lupa Kata Sandi"
        android:textAppearance="@style/selamat_dat"
        android:gravity="top"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_lupa"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="100dp"
        android:layout_below="@id/lupa_sandi"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jika Anda memberikan alamat email
yang benar, maka email seharusnya
sudah dikirimkan kepada Anda."
            android:textAppearance="@style/jika_anda_m"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="18dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/card_lupa"
        android:layout_marginTop="42dp"
        android:background="@drawable/btn_proses"
        android:elevation="4dp"
        android:text="Ok"
        android:textAppearance="@style/btn_masuk"
        android:clickable="true"/>

</RelativeLayout>