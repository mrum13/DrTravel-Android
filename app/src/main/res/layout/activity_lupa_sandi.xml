<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LupaSandiActivity">

    <View
        android:id="@+id/bola1"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-16dp"
        android:background="@drawable/bola_background"/>

    <View
        android:id="@+id/bola2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="74dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/bola_background" />

    <View
        android:id="@+id/bola3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/bola_background" />

    <View
        android:id="@+id/bola4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:background="@drawable/bola_background"/>

    <View
        android:id="@+id/bola5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/bola_background"/>

    <TextView
        android:id="@+id/lupa_sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:layout_centerHorizontal="true"
        android:text="Lupa Kata Sandi"
        android:textAppearance="@style/selamat_dat"
        android:gravity="top"/>

    <TextView
        android:id="@+id/masukkan_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Masukkan email yang valid"
        android:textAppearance="@style/masukkan_em"
        android:gravity="top"
        android:layout_below="@id/lupa_sandi"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/masukkan_email"
        android:layout_marginTop="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email_lupa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_et_login"
            android:elevation="1dp"
            android:clickable="true"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingHorizontal="24dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_proses"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/text_input_layout_email"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_proses"
        android:elevation="4dp"
        android:text="Proses"
        android:textAppearance="@style/btn_masuk"
        android:clickable="true"/>


</RelativeLayout>