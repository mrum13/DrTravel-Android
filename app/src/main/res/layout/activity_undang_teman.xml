<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lainnya.UndangTemanActivity">
    
    <include
        layout="@layout/toolbar_kembali"
        android:id="@+id/toolbar_undangteman"/>

    <TextView
        android:id="@+id/ajak_teman_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_undangteman"
        android:layout_marginTop="43dp"
        android:text="@string/ajak_teman_"
        android:layout_marginHorizontal="24dp"
        android:textAppearance="@style/ajak_teman_"
        android:gravity="top"
        />

    <Button
        android:id="@+id/btn_ajakteman"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_ajakteman"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/ajak_teman_"
        android:layout_marginTop="42dp"
        android:drawableLeft="@drawable/ic_add"
        android:textAppearance="@style/btn_ajak_teman"
        android:text="Ajak teman pakai Dr Travel"
        android:paddingHorizontal="31dp"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ajakteman"
        android:layout_marginTop="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ajak_teman"/>

</androidx.constraintlayout.widget.ConstraintLayout>